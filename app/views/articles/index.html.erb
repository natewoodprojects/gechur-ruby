<div align="center">
  <div class="container-fluid" style="display: flex; justify-content: center">
    <div style="display: flex; justify-content: center; flex-wrap: wrap">
       <% @items.each do |item| %>
      <div
        class="col-xs-12 col-sm-5 col-md-4 col-lg-12"
        style="
          background-color: #01acdd;
          border: 1px solid grey;
          margin: 5px;
          padding: 5px;
          max-width: 90%;
          height: auto;
          color: black;
          border-radius: 5px;
        "
      >
        <h1 style="font-size: 32px"><%= item.name %></h1>
        <br />
        <img
          src=" <%= item.photo %>"
          alt=""
          style="max-width: 90%; min-width: 50%"
        />
        <br />
        Cost: $ <%= item.cost %> <br />
        Goal: <%= item.goal %> hours<br />
        Used: <%= item.current %> hours <br />
        Completed: false <br />
        Description: <%= item.description %>  <br />
        <button>
          <a method="POST" href="/edit/{{item.item_id}}">Update</a>
        </button>
        <button>
          <a method="POST" href="/delete-page/{{item.item_id}}">Delete</a>
        </button>
      </div>
        <% end %>
    </div>
  </div>
